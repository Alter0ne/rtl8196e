#!/bin/sh

prefix=/usr
exec_prefix=/usr
exec_prefix_set=no

mcrypt_libs="  -lmcrypt "
mcrypt_cflags=""


usage()
{
	cat <<EOF
Usage: libmcrypt-config [OPTIONS]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cflags]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
	exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo "2.5.8"
      exit 0
      ;;
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
    echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
    echo $exec_prefix
fi

if test "$echo_cflags" = "yes"; then
    if test "${prefix}/include" != "/usr/include" ; then
      includes=""
      for i in $mcrypt_cflags ; do
	if test "$i" = "" ; then
	  includes=""
	fi
      done
    fi
    echo $includes $mcrypt_cflags
fi

if test "$echo_libs" = "yes"; then
    echo ${mcrypt_libs}
fi


