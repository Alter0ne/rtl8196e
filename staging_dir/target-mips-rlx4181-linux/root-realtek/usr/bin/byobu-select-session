import commands, os, re, sys

PKG = "byobu"
SHELL = os.getenv("SHELL", "/bin/bash")
if os.getenv("BYOBU_PREFIX"):
	PREFIX = os.getenv("BYOBU_PREFIX")
else:
	PREFIX = "/usr"
choice = ""
sessions = []
text = []
i = 0
output = commands.getoutput('screen -ls ' + PKG)
if output:
	for s in output.split("\n"):
		s = re.sub(r'\s+', ' ', s)
		if s.find(" ") == 0 and len(s) > 1:
			text.append(s)
			items = s.split(" ")
			sessions.append(items[1])
			i += 1

if i > 1:
	sys.stdout.write("\nByobu sessions...\n\n")
	tries = 0
	while tries < 3:
		i = 1
		for s in text:
			sys.stdout.write("  %d. %s\n" % (i, s))
			i += 1
		sys.stdout.write("  %d.  Create a new session\n" % i)
		i += 1
		try:
			choice = input("\nChoose 1-%d [1]: " % (i-1))
			if choice >= 1 and choice < i:
				break
			else:
				tries += 1
				choice = ""
				sys.stderr.write("\nERROR: Invalid input\n");
		except KeyboardInterrupt:
			print
			sys.exit(0)
		except:
			if choice == "":
				choice = 1
				break
			tries += 1
			choice = ""
			sys.stderr.write("\nERROR: Invalid input\n");

if choice:
	if choice == i-1:
		# Create a new session
		os.execv(PREFIX+"/bin/byobu", ["", SHELL])
	else:
	 	# Attach to the chosen session; must use the 'screen' binary
		os.execv(PREFIX+"/bin/screen", ["", "-AOxRR", sessions[choice-1]])

# No valid selection, default to the youngest session, create if necessary
os.execv(PREFIX+"/bin/byobu", ["", "-AOxRR"])
