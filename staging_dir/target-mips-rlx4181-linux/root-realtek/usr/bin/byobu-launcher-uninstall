PKG="byobu"

remove_launcher() {
	dest=$1
	if [ -w "$dest" ]; then
		sed -i -e "/ $PKG-launcher/d" -e "/ screen-launcher/d" "$dest"
	fi
}

for i in ".profile" ".bashrc" ".bash_profile" ".zprofile"; do
	remove_launcher "$HOME/$i"
done
mkdir -p "$HOME/.$PKG"
touch "$HOME/.$PKG/disable-autolaunch"
# install disabled motd printing; re-enable
rm -f "$HOME"/.hushlogin
