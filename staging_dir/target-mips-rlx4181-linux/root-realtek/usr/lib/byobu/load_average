PKG="byobu"
color 2>/dev/null || color() { true; }

if [ "$1" = "--detail" ]; then
	cat /proc/loadavg
	exit 0
fi

printf "$(color Y k)%s$(color -) " $(awk '{print $1}' /proc/loadavg)
