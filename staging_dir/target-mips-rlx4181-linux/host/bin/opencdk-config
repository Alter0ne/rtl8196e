# implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.

prefix=/home/alter0ne/rtk_openwrt_sdk/staging_dir/target-mips-rlx4181-linux/usr
exec_prefix=/home/alter0ne/rtk_openwrt_sdk/staging_dir/target-mips-rlx4181-linux/usr
exec_prefix_set=no

opencdk_libs="-L${exec_prefix}/lib -lopencdk -L/home/alter0ne/rtk_openwrt_sdk/staging_dir/target-mips-rlx4181-linux/usr/lib -lgcrypt -lgpg-error  -lz"
opencdk_cflags="-I/home/alter0ne/rtk_openwrt_sdk/staging_dir/target-mips-rlx4181-linux/usr/include -I${prefix}/include"

usage()
{
    cat <<EOF
Usage: opencdk-config [OPTIONS]
Options:
    [--prefix[=DIR]]
    [--exec-prefix[=DIR]]
    [--version]
    [--libs]
    [--cflags]
    [--help]
EOF
    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
    exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo "0.6.6"
      exit 0
      ;;
    --help)
      echo "start without params to get an overview"
      exit 0
      ;;      
    --cflags)
      echo_cflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
    echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
    echo $exec_prefix
fi

if test "$echo_cflags" = "yes"; then
    if test "${prefix}/include" != "/usr/include" ; then
      includes="-I${prefix}/include"
      for i in $opencdk_cflags ; do
    if test "$i" = "-I${prefix}/include" ; then
      includes=""
    fi
      done
    fi
    echo $includes $opencdk_cflags
fi

if test "$echo_libs" = "yes"; then
    echo ${opencdk_libs}
fi
