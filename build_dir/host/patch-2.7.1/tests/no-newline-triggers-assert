# Regression test for Assertion `s && size' failed in savebuf

. $srcdir/test-lib.sh

require_cat
use_local_patch
use_tmpdir

# ==============================================================

echo one > f

preserve_trailing_blank=
cat > f.diff <<EOF
--- f
+++ f
@@ -1,2 +1,2 @@
-1
+1a
 $preserve_trailing_blank
\ No newline at end of file
EOF

echo 1 > f

check 'patch -p0 < f.diff' <<EOF
patching file f
Hunk #1 succeeded at 1 with fuzz 1.
EOF
