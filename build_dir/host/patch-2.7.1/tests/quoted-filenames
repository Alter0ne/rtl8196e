# Don't recognize hunks before a filename has been specified/seen

. $srcdir/test-lib.sh

require_cat
use_local_patch
use_tmpdir

# ==============================================================

# Forbidden characters in Windows filenames:
#   \ / : * ? " < > |

cat > d.diff <<EOF
--- "\\t \\040"
+++ "\\t \\040"
@@ -1 +1 @@
-one
+two
EOF

ncheck 'echo one > "	  "'
ncheck 'patch -s -p0 < d.diff'

check 'cat "	  "' <<EOF
two
EOF
