# Don't recognize hunks before a filename has been specified/seen

. $srcdir/test-lib.sh

require_cat
use_local_patch
use_tmpdir

# ==============================================================

#export GDB=1

cat > f.diff <<EOF
--- f
+++ f.new
@@ -0,0 +1 @@
+content
EOF

check 'patch -p0 < f.diff' <<EOF
patching file f
EOF

check 'cat f' <<EOF
content
EOF
