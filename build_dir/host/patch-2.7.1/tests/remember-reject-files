. $srcdir/test-lib.sh

require_cat
use_local_patch
use_tmpdir

# ==============================================================

echo one > f

cat > f.diff <<EOF
--- f.orig
+++ f
@@ -2 +2 @@
-two
+three
--- f.orig
+++ f
@@ -2 +2 @@
-three
+four
--- f.orig
+++ f
@@ -2 +2 @@
-four
+five
EOF

check 'patch -p0 < f.diff || echo "Status: $?"' <<EOF
patching file f
Hunk #1 FAILED at 2.
1 out of 1 hunk FAILED -- saving rejects to file f.rej
patching file f
Hunk #1 FAILED at 2.
1 out of 1 hunk FAILED -- saving rejects to file f.rej
patching file f
Hunk #1 FAILED at 2.
1 out of 1 hunk FAILED -- saving rejects to file f.rej
Status: 1
EOF

check 'cat f.rej' <<EOF
--- f.orig
+++ f
@@ -2 +2 @@
-two
+three
--- f.orig
+++ f
@@ -2 +2 @@
-three
+four
--- f.orig
+++ f
@@ -2 +2 @@
-four
+five
EOF
