# Check for conditional library with a conditional directory.
# Report from Ralf Corsepius

. ./defs || Exit 1

set -e

cat >>configure.in <<'EOF'
AM_CONDITIONAL([INC], [test -z "$two"])
AC_OUTPUT
EOF

cat >>Makefile.am <<'EOF'
if INC
include_foodir = $(includedir)/foo
include_foo_HEADERS = foo.h
else
bardir = $(bindir)
dist_bar_SCRIPTS = x.sh
endif

foo.h x.sh:
	:>$@
distdircheck: distdir
	test -f $(distdir)/foo.h
	test -f $(distdir)/x.sh
EOF

$ACLOCAL
$AUTOCONF
$AUTOMAKE

mkdir nowhere
chmod a-w nowhere
./configure "--prefix=`pwd`/nowhere" "--bindir=`pwd`/bin" "--includedir=`pwd`/inc"
$MAKE installdirs
test ! -d bin
test -d inc/foo
test ! -f inc/foo/foo.h
rm -rf inc
$MAKE install
test ! -d bin
test -f inc/foo/foo.h
rm -rf inc
./configure two=two \
            "--prefix=`pwd`/nowhere" "--bindir=`pwd`/bin" "--includedir=`pwd`/inc"
$MAKE install
test ! -d inc
test -f bin/x.sh
$MAKE installdirs
test ! -d inc
test -d bin
$MAKE distdircheck
