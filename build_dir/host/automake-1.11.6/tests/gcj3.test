# Make sure dependency tracking works for java.

. ./defs || Exit 1

cat >> configure.in << 'END'
_AM_DEPENDENCIES(GCJ)
AC_SUBST(GCJ)
END

cat > Makefile.am << 'END'
bin_PROGRAMS = convert
convert_SOURCES = x/y/convert.java
END

$ACLOCAL || Exit 1
$AUTOMAKE || Exit 1

num=`grep depcomp Makefile.in | wc -l`
test $num -gt 1
