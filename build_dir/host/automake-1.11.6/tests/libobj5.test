# Test to make sure AC_REPLACE_FUNCS works across lines.  Report from
# Jim Meyering.

. ./defs || Exit 1

cat > Makefile.am << 'END'
bin_PROGRAMS = joe
LDADD = @LIBOBJS@
END

cat >> configure.in << 'END'
AC_PROG_CC
AC_REPLACE_FUNCS(\
   foo)
END

: > foo.c

$ACLOCAL || Exit 1
$AUTOMAKE || Exit 1
$FGREP foo.c Makefile.in
