# Check support for no-dist-gzip with lzip.

required=lzip
. ./defs || Exit 1

set -e

cat > configure.in << 'END'
AC_INIT([lzip], [1.0])
AM_INIT_AUTOMAKE([no-dist-gzip dist-lzip])
AC_CONFIG_FILES([Makefile])
AC_OUTPUT
END

cat > Makefile.am << 'END'
test: distcheck
	test $(DIST_ARCHIVES) = lzip-1.0.tar.lz
	test -f $(DIST_ARCHIVES)
END

$ACLOCAL
$AUTOCONF
$AUTOMAKE
./configure
$MAKE test

:
