# Test to make sure backslash-newline is treated as whitespace.

. ./defs || Exit 1

cat > configure.in << 'END'
AC_INIT
AM_INIT_AUTOMAKE(nonesuch, nonesuch)
AC_PROG_CC
AC_OUTPUT(Makefile)
END

cat > Makefile.am << 'END'
bin_PROGRAMS = zot
zot_SOURCES = \
zar.c\
doz.c
END

$ACLOCAL || Exit 1
$AUTOMAKE || Exit 1

$FGREP zar.cdoz Makefile.in && Exit 1
Exit 0
