# Check that a non-option argument and the `--' special argument
# explicitly terminate the option list for `py-compile'.

required=python
. ./defs || Exit 1

set -e

cp "$testsrcdir/../lib/py-compile" .

: > ./-o.py
: > ./--foo.py
./py-compile -- -o.py --foo.py
test -f ./-o.pyc
test -f ./-o.pyo
test -f ./--foo.pyc
test -f ./--foo.pyo
rm -f ./-*.py[co]
: > x.py
./py-compile x.py -o.py --foo.py
test -f ./x.pyc
test -f ./x.pyo
test -f ./-o.pyc
test -f ./-o.pyo
test -f ./--foo.pyc
test -f ./--foo.pyo

:
